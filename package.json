{
  "name": "react-scroll-indicators",
  "version": "0.2.0",
  "description": "React overflow container with hover-activated scroll indicators",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./OverflowContainer": {
      "types": "./src/OverflowContainer.tsx",
      "import": "./src/OverflowContainer.tsx",
      "default": "./src/OverflowContainer.tsx"
    },
    "./styles": {
      "import": "./src/overflow-container.css",
      "default": "./src/overflow-container.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "example": "npm run dev --prefix example"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "react",
    "scroll",
    "overflow",
    "indicators",
    "container"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankitc248/react-scroll-indicators.git"
  }
}
